
<script type="text/javascript">
    $(document).ready(function() {
        $('#events').dataTable({
            'iDisplayLength': 20,
            "bLengthChange": false,
            "bPaginate": false,
            "bFilter": false,
            "bSort": true,
            "order": [
                [ 2, "desc" ]
            ]
        });
    });
</script>
<div>
  <table id="events" style="width: 98%; margin-left: auto;margin-right: auto;margin-top: 5px;">

    <thead>
    <tr>
      <th>Location</th>
      <th>Date Reported</th>
      <th>Diagnosis</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <% (@events || []).each do |event| %>
     <tr>
       <td><%= event.location_name %></td>
       <td><%= event.date_reported.strftime("%d %b %Y") %></td>
       <td><%= event.description %></td>
       <td> New</td>
       <td>view</td>
     </tr>
    <% end %>
    </tbody>
  </table>
</div>
